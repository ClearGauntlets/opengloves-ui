{
  "name": "openglove-ui",
  "description": "OpenGloves UI",
  "main": "main.js",
  "author": "Danwillm",
  "license": "MIT",
  "private": false,
  "nodeGypRebuild": true,
  "version": "0.1.0",
  "build": {
    "compression": "maximum",
    "icon": "public/favicon.png",
    "productName": "OpenGloves UI",
    "files": [
      "public/**/*",
      "main.js"
    ],
    "win": {
      "target": "portable",
      "icon": "public/favicon.png"
    },
    "portable": {
      "artifactName": "${name}.${ext}",
      "splashImage": "assets/splash.bmp"
    },
    "linux": {},
    "mac": {}
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LucidVR/opengloves-ui"
  },
  "bugs": {
    "url": "https://github.com/LucidVR/opengloves-ui/issues"
  },
  "scripts": {
    "rollup-build": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "start": "sirv public",
    "electron": "wait-on http://localhost:5000 && electron .",
    "dev": "concurrently \"yarn run rollup-dev\" \"yarn run electron\"",
    "package": "electron-builder",
    "build": "yarn run rollup-build && yarn run package"
  },
  "dependencies": {
    "electron-serve": "^1.1.0",
    "hjson": "https://github.com/danwillm/hjson-js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/jit": "^0.1.18",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "electron": "^12.0.9",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0",
    "electron-rebuild": "^2.3.5",
    "postcss": "8.3.0",
    "postcss-load-config": "^3.0.1",
    "postcss-nesting": "^8.0.1",
    "rollup": "^2.48.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "svelte": "^3.38.2",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^2.1.2",
    "wait-on": "^5.3.0"
  }
}
